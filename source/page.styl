body
	font-family 'wenquanyi micro hei', 'Ubuntu'
	font-size 13px
	line-height 26px
	-moz-box-orient vertical
	-webkit-box-orient vertical
body>*
	width 1100px
	margin 26px auto
	padding 13px
*
	-moz-box-sizing border-box
	-webkit-box-sizing border-box
#send_name
	width 200px
	height 26px
p
	padding 0px
	margin 0px
#note
	font-size 10px

#board
	padding 0px
	display -moz-box
	display -webkit-box
	margin 26px auto
	height 600px
	-moz-box-orient horizontal
	-webkit-box-orient horizontal
	overflow-y hidden
#left
	border 1px solid hsl(0,96%,90%)
	width 500px
	height 100%
	-moz-box-orient vertical
	-webkit-box-orient vertical
	overflow hidden
textarea
	height 26px
#topic
	width 110%
	height 574px
	overflow-y scroll
#topic>*:nth-child(2n)
	background hsl(0,80%,96%)
#topic>*:nth-child(2n-1)
	background hsl(220,80%,96%)
#create
	opacity 0.4
	width 100%
	height 26px
	background hsl(0,90%,90%)
#right
	border 1px solid hsl(200,96%,90%)
	margin-left -30px
	width 600px
	height 100%
	-moz-box-orient vertical
	-webkit-box-orient vertical
	overflow hidden
	background white
#thread
	width 110%
	height 574px
	overflow-y scroll
	overflow-x hidden
#thread>*:nth-child(2n)
	background hsl(150,80%,96%)
#thread>*:nth-child(2n-1)
	background hsl(310,80%,96%)
#add
	width 600px
	height 26px
	background hsl(180,90%,90%)
#box
	width 500px
	height 26px
	display none

#hide
	opacity 0.4
