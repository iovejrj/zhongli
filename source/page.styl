body
	font-family 'wenquanyi micro hei', 'Ubuntu'
	font-size 14px
	line-height 26px
#box
	width 1160px
	height 640px
	margin 20px auto
	background hsl(0,40%,50%)
#left, #right
	height 640px
	overflow-x hidden
	overflow-y scroll
#left
	width 460px
	float left
	background hsl(340,80%,90%)
#right
	float right
	width 700px
	background hsl(40,80%,90%)
#login_image
	margin 260px
#login_nickname
	margin 240px 100px
#post
	position relative
	left 464px
	bottom 200px
	width 680px
	height 28px
	line-height 26px
	font-size 13px
	border 0px
	resize none
.posted_box
	min-height 26px
	width 100%
.posted_content, .posted_content_raw
	overflow-x hidden
	float left
	width 580px
	padding-left 13px
.posted_content_raw
	color hsl(0,80%,60%)
.posted_username
	float left
	width 90px
	overflow-x hidden
#left>nav
	width 100%
	badkground hsl(0,80%,80%)
#left>*:nth-child(2n)
	background hsl(240,80%,80%)
#right>*:nth-child(2n)
	background hsl(40,80%,80%)