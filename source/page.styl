body
	font-family 'wenquanyi micro hei', 'Ubuntu'
	font-size 13px
	line-height 26px
	-moz-box-orient vertical
	-webkit-box-orient vertical
body>*
	width 1100px
	margin 26px auto
	padding 13px
	background hsl(260,90%,90%)
*
	-moz-box-sizing border-box
	-webkit-box-sizing border-box

#send_name
	width 200px
	height 26px
p
	padding 0px
	margin 0px
#note
	font-size 10px
	display none

#board
	padding 0px
	display -moz-box
	display -webkit-box
	margin 26px auto
	height 300px
	-moz-box-orient horizontal
	-webkit-box-orient horizontal
#left
	width 500px
	height 100%
	background blue
	-moz-box-orient vertical
	-webkit-box-orient vertical
#topic
	width 100%
	height 276px
	overflow-y scroll
#create
	width 100%
	height 26px
	background green
#right
	width 600px
	height 100%
	background red
	-moz-box-orient vertical
	-webkit-box-orient vertical
#thread
	width 100%
	height 274px
	overflow-y scroll
	overflow-x hidden
#add
	width 600px
	height 26px
	background gray
#box
	width 500px
	height 26px
	display none
