
::-webkit-scrollbar
  width 4px
  height 4px

::-webkit-scrollbar-track
  width 4px
  background hsl(0,90,95)

::-webkit-scrollbar-thumb
  background hsl(0,50,50)
  border-radius 2px

*
  box-sizing border-box

body
  padding 0px
  margin 0px 10px
  display -webkit-box
  -webkit-box-orient horizontal
  width 4700px
  overflow hidden
  background hsl(20,20,92)
  font-family 'Lato', sans-serif
  font-weight 300

body > div
  width 800px
  height 100%
  margin 0px 10px
  background white

.unit
  margin 0px
  padding 10 30px
  display -webkit-box
  -webkit-box-orient horizontal

  header.icon
    width 50px
    height 50px
    box-shadow 0px 0px 8px gray

  p
    margin 10px

  img
    width 100%

  .name
    margin-right 20px

  .mark
    color hsl(120,50,70)

#config
  .login
    text-align right
    color hsl(240,90,90)

  .form
    line-height 20px
    padding 10px 30px

    input
      width 500px
      height 30px
      outline none
      border none
      box-shadow 0px 1px 0px gray
      font-family 'Lato', sans-serif
      font-size 16px
      padding 4px 8px